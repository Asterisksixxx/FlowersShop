@model RegisterModel

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div class="cotainer">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <div class="form-group row">
                            <label asp-for="Email" class="col-md-4 col-form-label text-md-right">E-Mail</label>
                            <div class="col-md-6">
                                <input asp-for="Email" type="text" class="form-control" required autofocus>
                                <span asp-validation-for="Email" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="Password" for="password" class="col-md-4 col-form-label text-md-right">Пароль</label>
                            <div class="col-md-6">
                                <input asp-for="Password" type="password" class="form-control" required autofocus>
                                <span asp-validation-for="Password" />
                            </div>
                        </div>

                        <div class="form-group row">
                            <label asp-for="ConfirmPassword" class="col-md-4 col-form-label text-md-right">Повторите пароль</label>
                            <div class="col-md-6">
                                <input asp-for="ConfirmPassword" type="password" class="form-control" required autofocus>
                                <span asp-validation-for="ConfirmPassword" />
                            </div>
                        </div>
                        <div class="col-md-6 offset-md-4">
                            <button type="submit" class="btn btn-primary">
                                Регистрация
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>






